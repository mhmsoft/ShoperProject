@using Shoper.Entities
@model Shoper.Entities.ProductPrice

@{
    ViewData["Title"] = "CreateNewPrice";
}

<h4>Yeni Fiyat ekleme Formu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewPrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <select name="UnitPrice" asp-items="Html.GetEnumSelectList<UnitPrice>()" class="form-control">
                </select>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <input type="hidden" asp-for="ProductId" class="form-control" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="PriceHistory" asp-route-id="@Model.ProductId">Önceki Sayfa</a>
            </div>
        </form>
    </div>
</div>



