@model Shoper.UI.Models.ViewModels.loginViewModel
@{
    ViewData["Title"] = "Login";
    var ReturnUrl = @Context.Request.Query["ReturnUrl"];
}

<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 md-padding">
    <h1 class="align-center">Returning Customer</h1>
    <br>

    <form asp-action="Login" asp-route-ReturnUrl="@ReturnUrl">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="email" asp-for="Email" value="" placeholder="E-mail" required="" class="form-control" />
        <br>
        <input type="password" asp-for="Password" value="" placeholder="Password" required="" class="form-control" />
        <br>
        <input type="checkbox" asp-for="RememberMe" /> Beni Hatırla
        <br/>
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
        <a asp-action="ForgotPassword" data-action="Forgot-Password" class="xs-margin">Şifremi Unuttum ></a>
        <br><br>

        <p>
            If you already have an account with us, please login.
        </p>
        <hr class="offset-xs">

        <a href="#facebook" class="btn btn-facebook"> <i class="ion-social-facebook"></i> Login with Facebook </a>
        <hr class="offset-sm">

        <p>
            Hesabınız Yok mu! <a href="@Url.Action("Register","Home")"> Üye ol > </a>
        </p>

    </form>
</div>


